<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutoringApp.Views.AboutPage"
             xmlns:vm="clr-namespace:TutoringApp.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">pink</Color>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView Grid.Row="1">
        <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
            <Button Margin="0,10,0,0" Text="Register as teacher"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="Red" 
                    Clicked="navigateToNewTeacherPage"/>
            <Button Margin="0,10,0,0" Text="Browse Teachers"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White" 
                    Clicked="navigateToTeacherOverviewPage"/>
        </StackLayout>
    </ScrollView>


</ContentPage>
