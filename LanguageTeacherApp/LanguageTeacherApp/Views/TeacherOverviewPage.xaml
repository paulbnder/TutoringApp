<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageTeacherApp.Views.TeacherOverviewPage"
             xmlns:local="clr-namespace:LanguageTeacherApp.ViewModels"  
             xmlns:model="clr-namespace:LanguageTeacherApp.Models">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="See all teachers:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <RefreshView x:DataType="local:TeacherOverviewViewModel" Command="{Binding LoadTeachersCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
                <CollectionView ItemsSource="{Binding Teachers}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10" OutlineColor="Gray">
                                <StackLayout x:DataType="model:Teacher" HeightRequest="100">
                                    <StackLayout Orientation="Horizontal">
                                        <Image WidthRequest="100" HeightRequest="100"  Source="{Binding ProfilePictureSource}"></Image>
                                        <Label Text="{Binding Name}" LineBreakMode="NoWrap" Style="{DynamicResource ListItemTextStyle}" FontSize="16" />
                                        
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>

       
    </ContentPage.Content>
    
</ContentPage>